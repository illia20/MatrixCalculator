<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matrixcalculator">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MatrixCalculator">
        <activity android:name=".DrawingHMActivity"/>
        <activity
            android:name=".HeatmapActivity"
            android:configChanges="orientation"
            android:label="@string/title_button_graphics"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MultiplyActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_multiply"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddSubActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_add_sub"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InverseActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_inverse"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeterminantActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_determinant"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>